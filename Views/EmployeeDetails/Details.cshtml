@model Recognition_Board.Models.EmployeeDetails
@{
    ViewBag.Title = "Details";
}
<br />
<br />
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-6">

            <h2>@Html.DisplayFor(model => model.firstName) @Html.DisplayFor(model => model.lastName)'s Details</h2>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.firstName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.firstName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.lastName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.lastName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.phoneNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.phoneNumber)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.officeLocation)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.officeLocation)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.department)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.department)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.position)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.position)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.manager)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.manager)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.hireDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.hireDate)
                </dd>

            </dl>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.employeeID }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
        <div class="col-md-6">
            @{
                var total = ViewBag.total;
                var excellence = ViewBag.Excellence;
                var culture = ViewBag.Culture;
                var integrity = ViewBag.Integrity;
                var innovate = ViewBag.Innovate;
                var lifestyle = ViewBag.Lifestyle;
                var passion = ViewBag.Passion;
                var stewardship = ViewBag.Stewardship;

                <h2>Total recognitions received = @total</h2>
                <h4>Excellence awards = @excellence</h4>
                <h4>Culture awards = @culture</h4>
                <h4>Integrity awards = @integrity</h4>
                <h4>Innovation awards = @innovate</h4>
                <h4>Lifestyle awards = @lifestyle</h4>
                <h4>Passion awards = @passion</h4>
                <h4>Stewardship awards = @stewardship</h4>
            }



        </div>
    </div>
</div>



